<Window x:Class="Practice.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід в систему" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#E3F2FD" ResizeMode="NoResize">
    <Grid>
        <Border Background="White" Width="320" CornerRadius="10" Padding="30" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
            </Border.Effect>
            <StackPanel>
                <Border Width="60" Height="60" CornerRadius="30" Background="{StaticResource PrimaryColor}" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="P" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Вхід в систему" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="{StaticResource TextPrimary}"/>

                <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtEmail" Margin="0,0,0,15"/>

                <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="TxtPassword" Margin="0,0,0,20"/>

                <Button Content="Увійти" Height="45" Click="BtnLogin_Click"/>

                <TextBlock x:Name="TxtError" Foreground="#F44336" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>