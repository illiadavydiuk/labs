<Window x:Class="Practice.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Зміна пароля" Height="325" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="White">
    <StackPanel Margin="20">
        <TextBlock Text="Необхідно змінити пароль" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Новий пароль" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="TxtNewPass" Margin="0,0,0,15"/>

        <TextBlock Text="Підтвердження пароля" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="TxtConfirmPass" Margin="0,0,0,20"/>

        <Button Content="Змінити та увійти" Click="BtnChange_Click"/>
    </StackPanel>
</Window>