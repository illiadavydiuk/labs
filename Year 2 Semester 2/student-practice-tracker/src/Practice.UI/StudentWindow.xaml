<Window x:Class="Practice.Windows.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет студента" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Border Background="#2196F3" Width="40" Height="40" CornerRadius="8">
                        <TextBlock Text="S" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock x:Name="TxtStudentName" Text="Завантаження..." FontSize="16" FontWeight="SemiBold" Foreground="#212121"/>
                        <TextBlock Text="Студентський портал" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Курс:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
                    <ComboBox x:Name="CmbCurrentCourse" Width="220" Margin="0,0,15,0" DisplayMemberPath="Name" SelectionChanged="CmbCurrentCourse_SelectionChanged"/>
                    <Button Content="Вийти" Click="BtnLogout_Click" Background="#FFEBEE" Foreground="#D32F2F" Height="30" Width="80" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="15" Background="Transparent" BorderThickness="0">

            <TabItem x:Name="TabTopicSelection" Header="Вибір теми">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="PanelFilters" Background="White" Padding="15" CornerRadius="8" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фільтр за організацією:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="CmbFilterOrg" Width="250" DisplayMemberPath="Name" SelectedValuePath="OrganizationId" SelectionChanged="CmbFilterOrg_SelectionChanged"/>
                            <Button Content="Очистити" Click="BtnResetFilter_Click" Margin="10,0,0,0" Background="#EEE" Padding="15,5" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel>
                            <ItemsControl x:Name="GridTopics">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" Padding="20" Margin="0,0,0,12" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" Foreground="#1565C0" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Organization.Name}" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="#444"/>
                                                </StackPanel>
                                                <Button Grid.Column="1" Content="Обрати цю тему" Click="BtnSelectTopic_Click" Tag="{Binding TopicId}" Background="#4CAF50" Foreground="White" Padding="20,10" VerticalAlignment="Center" Margin="20,0,0,0" BorderThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border x:Name="PanelTopicAlreadySelected" Visibility="Collapsed" Background="White" Padding="40" CornerRadius="8" BorderBrush="#2196F3" BorderThickness="1" Margin="0,20,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="✔ Тему вже закріплено" FontSize="24" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="Ви вже обрали тему для цього курсу. Перейдіть до звіту." Foreground="Gray" Margin="0,0,0,20"/>
                                    <Button Content="Перейти до звіту" Click="BtnGoToReport_Click" Padding="30,10" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem x:Name="TabReport" Header="Мій звіт">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="8" Padding="25" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="Подання звітної документації" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                            <TextBlock Text="Обрана тема:" Foreground="Gray" FontSize="12"/>
                            <TextBlock x:Name="TxtCurrentTopicTitle" Text="-" FontSize="16" FontWeight="Bold" Foreground="#1565C0" TextWrapping="Wrap" Margin="0,0,0,20"/>

                            <TextBlock Text="Коментар до роботи:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="TxtReportComment" Height="120" AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top" Padding="10" Margin="0,0,0,20" BorderBrush="#BBB"/>

                            <TextBlock Text="Посилання на проект:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="TxtReportLink" Padding="8" Margin="0,0,0,20" BorderBrush="#BBB"/>

                            <TextBlock Text="Прикріплені файли:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                <StackPanel>
                                    <Button Content="📂 Додати файл" Click="BtnUploadFile_Click" HorizontalAlignment="Left" Background="#2196F3" Foreground="White" Padding="15,8" BorderThickness="0"/>
                                    <ListBox x:Name="ListAttachments" Height="100" Margin="0,10,0,0" BorderThickness="0"/>
                                </StackPanel>
                            </Border>

                            <Button x:Name="BtnSubmitReport" Content="ВІДПРАВИТИ НА ПЕРЕВІРКУ" Click="BtnSubmitReport_Click" Height="45" Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,10,0,0" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Поточний статус" FontWeight="Bold" Margin="0,0,0,15"/>

                                <Border x:Name="StatusBadge" Background="#EEE" CornerRadius="20" Padding="10,5" HorizontalAlignment="Center" Margin="0,0,0,15">
                                    <TextBlock x:Name="TxtInfoStatus" Text="-" FontWeight="Bold"/>
                                </Border>

                                <Separator Margin="0,10"/>
                                <TextBlock Text="Керівник:" FontWeight="Bold" Margin="0,5,0,5"/>
                                <TextBlock x:Name="TxtInfoSupervisor" Text="Не призначено" FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Хронологія подій" FontWeight="Bold" Margin="0,0,0,15" Foreground="#1976D2"/>
                                <ListBox x:Name="ListHistory" Grid.Row="1" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding TimeStamp, StringFormat=dd.MM HH:mm}" Foreground="Gray" Width="90" FontSize="11" VerticalAlignment="Top"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Action}" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                                                    <TextBlock Text="{Binding Details}" TextWrapping="Wrap" FontSize="11" Foreground="#555" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem x:Name="TabResults" Header="Результати">
                <Border Background="White" CornerRadius="8" Padding="30" Margin="10">
                    <ScrollViewer>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="600">
                            <TextBlock Text="Результат практики" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="🏢 Оцінювання від Компанії" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Оцінка:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                        <TextBlock x:Name="TxtCompanyGrade" Text="-" Grid.Column="1" FontWeight="Bold"/>
                                    </Grid>
                                    <TextBlock Text="Відгук куратора:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                    <TextBlock x:Name="TxtCompanyFeedback" Text="-" TextWrapping="Wrap" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Фінальна оцінка (Університет)" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtFinalGrade" Text="-" FontSize="72" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtFinalStatusText" Text="Не оцінено" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center"/>

                            <TextBlock Text="Відгук викладача:" FontWeight="Bold" Margin="0,30,0,10"/>
                            <Border Background="#F9F9F9" Padding="20" CornerRadius="5" MinHeight="100">
                                <TextBlock x:Name="TxtFeedback" Text="Тут з'явиться коментар викладача..." TextWrapping="Wrap" FontStyle="Italic"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>