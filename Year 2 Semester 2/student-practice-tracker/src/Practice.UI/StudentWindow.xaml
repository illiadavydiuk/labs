<Window x:Class="Practice.Windows.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет студента" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.Effect>
                <DropShadowEffect Color="#DDD" BlurRadius="10" Opacity="0.5"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource PrimaryColor}" Margin="0,0,15,0">
                    <TextBlock Text="S" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Кабінет студента" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="TxtStudentName" Text="Ім'я Прізвище" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Вийти" HorizontalAlignment="Right" Margin="20" Background="Transparent" Foreground="#F44336" BorderBrush="#F44336" BorderThickness="1" Click="BtnLogout_Click"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="1. Вибір теми практики" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryColor}"/>

                <Border Background="White" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Доступні теми" Style="{StaticResource LabelStyle}"/>
                        <DataGrid x:Name="GridTopics" Height="200" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тема" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Компанія" Binding="{Binding Organization.Name}" Width="150"/>
                                <DataGridTemplateColumn Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Обрати" Click="BtnSelectTopic_Click" Tag="{Binding TopicId}" FontSize="12" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Оновити список" Click="BtnRefreshTopics_Click" HorizontalAlignment="Left" Background="#90A4AE"/>
                    </StackPanel>
                </Border>

                <Border Background="#E3F2FD" CornerRadius="8" Padding="20" Margin="0,20,0,0" BorderBrush="#2196F3" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ВАША ПОТОЧНА ПРАКТИКА" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtCurrentAssignment" Text="Тема не обрана" FontSize="16" TextWrapping="Wrap"/>
                        <TextBlock x:Name="TxtSupervisorName" Text="" FontSize="14" Margin="0,5,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="2. Подача звіту" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryColor}"/>

                <Border Background="White" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Коментар до роботи" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtReportComment" Height="100" TextWrapping="Wrap" VerticalContentAlignment="Top" Margin="0,0,0,20"/>

                        <TextBlock Text="Файл звіту" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="Обрати файл..." Click="BtnBrowseFile_Click" Background="#78909C" Width="120"/>
                            <TextBlock x:Name="TxtSelectedFile" Text="Файл не обрано" VerticalAlignment="Center" Margin="15,0" FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        </StackPanel>

                        <Button Content="Відправити звіт на перевірку" Click="BtnSubmitReport_Click" Height="45" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>