<Window x:Class="Practice.Windows.SupervisorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет керівника" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.Effect>
                <DropShadowEffect Color="#DDD" BlurRadius="10" Opacity="0.5"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource PrimaryColor}" Margin="0,0,15,0">
                    <TextBlock Text="K" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Кабінет керівника" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="TxtName" Text="Викладач" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </StackPanel>
            <Button Content="Вийти" HorizontalAlignment="Right" Margin="20" Background="Transparent" Foreground="#F44336" BorderBrush="#F44336" BorderThickness="1" Click="BtnLogout_Click"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Звіти студентів на перевірку" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Content="Оновити" Margin="20,0,0,0" Click="BtnRefresh_Click" Background="#90A4AE" Padding="10,5"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="GridReports" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="GridReports_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Студент" Binding="{Binding InternshipAssignment.Student.User.LastName}" Width="150"/>
                            <DataGridTextColumn Header="Тема" Binding="{Binding InternshipAssignment.InternshipTopic.Title}" Width="*"/>
                            <DataGridTextColumn Header="Дата подачі" Binding="{Binding SubmissionDate}" Width="120"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding ReportStatus.StatusName}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Перевірка роботи" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryColor}"/>

                    <TextBlock Text="Коментар студента:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtStudentComment" IsReadOnly="True" Background="#F5F5F5" TextWrapping="Wrap" Height="60" Margin="0,0,0,15"/>

                    <TextBlock Text="Прикріплені файли:" Style="{StaticResource LabelStyle}"/>
                    <ListBox x:Name="ListFiles" Height="80" Margin="0,0,0,20" DisplayMemberPath="FileName"/>

                    <Separator Margin="0,0,0,20"/>

                    <TextBlock Text="Ваш відгук:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtFeedback" Height="80" TextWrapping="Wrap" VerticalContentAlignment="Top" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Прийняти" Background="#4CAF50" Margin="0,0,5,0" Click="BtnApprove_Click"/>
                        <Button Grid.Column="1" Content="Відхилити" Background="#F44336" Margin="5,0,0,0" Click="BtnReject_Click"/>
                    </Grid>

                    <TextBlock x:Name="TxtInfo" Foreground="Gray" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>