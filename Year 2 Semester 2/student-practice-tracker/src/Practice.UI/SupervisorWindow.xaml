<Window x:Class="Practice.Windows.SupervisorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет керівника" Height="1000" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="StudentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F8E9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Border Background="#FF9800" Width="45" Height="45" CornerRadius="22">
                        <TextBlock Text="K" Foreground="White" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="КАБІНЕТ КЕРІВНИКА" FontWeight="Bold" FontSize="14" Foreground="#757575"/>
                        <TextBlock x:Name="TxtSupervisorName" Text="Викладач..." FontSize="18" FontWeight="SemiBold" Foreground="#212121"/>
                    </StackPanel>
                </StackPanel>
                <Button Grid.Column="2" Content="Вийти" Click="BtnLogout_Click" Background="#FFEBEE" Foreground="#D32F2F" Height="35" Width="80" BorderThickness="0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Студенти на практиці" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#455A64"/>

                <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,15" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Фільтрація:" FontWeight="Bold" FontSize="12" Margin="0,0,0,5" Foreground="Gray"/>
                        <TextBlock Text="Курс:" FontSize="11" Foreground="Gray"/>
                        <ComboBox x:Name="CmbFilterCourse" DisplayMemberPath="Name" SelectedValuePath="CourseId" SelectionChanged="Filter_SelectionChanged" Margin="0,0,0,8"/>
                        <TextBlock Text="Група:" FontSize="11" Foreground="Gray"/>
                        <ComboBox x:Name="CmbFilterGroup" DisplayMemberPath="GroupCode" SelectedValuePath="GroupId" SelectionChanged="Filter_SelectionChanged" Margin="0,0,0,10"/>
                        <Button Content="Скинути фільтри" Click="BtnResetFilters_Click" Background="#ECEFF1" Foreground="Black" FontSize="11" Height="37"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ListStudents">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource StudentCardStyle}" MouseLeftButtonUp="StudentCard_Click" Tag="{Binding AssignmentId}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding StudentName}" FontWeight="Bold" FontSize="16"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <Border Background="#E3F2FD" CornerRadius="3" Padding="5,1" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding GroupCode}" FontSize="11" Foreground="#1565C0"/>
                                                </Border>
                                                <TextBlock Text="{Binding CourseName}" FontSize="11" Foreground="Gray" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding TopicTitle}" Foreground="#1976D2" TextTrimming="CharacterEllipsis" Margin="0,5,0,0" ToolTip="{Binding TopicTitle}"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{Binding StatusColor}" CornerRadius="10" Padding="8,2" VerticalAlignment="Top" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding ReportStatus}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Grid.Column="1" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
                <Grid>
                    <Grid x:Name="PanelEmpty" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="👈 Оберіть студента зі списку зліва" Foreground="Gray" FontSize="16"/>
                    </Grid>

                    <Grid x:Name="PanelContent" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#F9FAFB" Padding="20" BorderBrush="#EEE" BorderThickness="0,0,0,1" CornerRadius="8,8,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock x:Name="TxtActiveStudent" Text="..." FontSize="22" FontWeight="Bold"/>
                                </StackPanel>
                                <WrapPanel Orientation="Horizontal">
                                    <TextBlock Text="Тема:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="TxtActiveTopic" Text="..." Margin="0,0,20,0"/>
                                    <TextBlock Text="Організація:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="TxtActiveOrg" Text="..."/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Row="1" Padding="20">
                            <StackPanel>
                                <Border Background="White" Padding="15,5" Margin="0,0,0,15" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <Border x:Name="Step1Circle" Width="24" Height="24" CornerRadius="12" Background="#4CAF50" Margin="0,0,0,2">
                                                <TextBlock Text="✔" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Тема" FontSize="10" Foreground="#555"/>
                                        </StackPanel>
                                        <Rectangle Grid.Column="1" Height="2" Fill="#DDD" VerticalAlignment="Top" Margin="5,12,5,0" x:Name="Line1"/>
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                            <Border x:Name="Step2Circle" Width="24" Height="24" CornerRadius="12" Background="#DDD" Margin="0,0,0,2">
                                                <TextBlock Text="2" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock x:Name="Step2Text" Text="Звіт" FontSize="10" Foreground="#999"/>
                                        </StackPanel>
                                        <Rectangle Grid.Column="3" Height="2" Fill="#DDD" VerticalAlignment="Top" Margin="5,12,5,0" x:Name="Line2"/>
                                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                                            <Border x:Name="Step3Circle" Width="24" Height="24" CornerRadius="12" Background="#DDD" Margin="0,0,0,2">
                                                <TextBlock Text="3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Оцінка" FontSize="10" Foreground="#999"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <TextBlock Text="1. Звіт студента" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>
                                <Border Background="#F5F5F5" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Коментар студента:" FontWeight="Bold"/>
                                            <TextBlock x:Name="TxtReportDate" Text="Дата: -" Foreground="Gray" Grid.Column="1"/>
                                        </Grid>
                                        <TextBlock x:Name="TxtStudentComment" Text="..." TextWrapping="Wrap" Margin="0,0,0,15" FontStyle="Italic"/>

                                        <TextBlock Text="Посилання:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtStudentLink" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="Blue" Text="-" Margin="0,0,0,15"/>

                                        <TextBlock Text="Файли:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ListBox x:Name="ListAttachments" Height="100" Margin="0,5,0,10" BorderThickness="1" BorderBrush="#EEE">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" VerticalAlignment="Center"/>

                                                        <Button Grid.Column="1" Content="Відкрити" Click="BtnOpenFile_Click" Tag="{Binding FilePath}" 
                        FontSize="10" Padding="5,2" Margin="10,0,0,0" Background="#E3F2FD" Foreground="#1565C0" BorderThickness="0"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                    </StackPanel>
                                </Border>

                                <TextBlock Text="2. Оцінювання та Статус" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Відгук викладача:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                        <TextBox x:Name="TxtSupervisorFeedback" Height="60" AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top" Margin="0,0,0,15" BorderBrush="#CCC"/>

                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Оцінка компанії (0-100):" Margin="0,0,0,5"/>
                                                <TextBox x:Name="TxtCompanyGrade" Padding="5"/>
                                                <TextBlock Text="Відгук компанії:" Margin="0,5,0,5"/>
                                                <TextBox x:Name="TxtCompanyFeedback" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Фінальна оцінка (0-100):" Margin="0,0,0,5" FontWeight="Bold"/>
                                                <TextBox x:Name="TxtFinalGrade" Padding="5" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Width="80"/>
                                                <TextBlock Text="Статус звіту:" Margin="0,15,0,5"/>
                                                <ComboBox x:Name="CmbReportStatus" HorizontalAlignment="Stretch">
                                                    <ComboBoxItem Content="На перевірці" Tag="1"/>
                                                    <ComboBoxItem Content="Повернути на доопрацювання" Tag="2" Foreground="Red"/>
                                                    <ComboBoxItem Content="Прийнято" Tag="3" Foreground="Green" FontWeight="Bold"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>

                                        <Button Content="ЗБЕРЕГТИ РІШЕННЯ" Click="BtnSaveAssessment_Click" Background="#2196F3" Width="200" HorizontalAlignment="Right" Foreground="White" Height="40" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Хронологія подій" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>
                                <Border Background="#FAFAFA" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                                    <ListBox x:Name="ListHistory" BorderThickness="0" Background="Transparent">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding TimeStamp, StringFormat=dd.MM HH:mm}" Foreground="Gray" Width="90" FontSize="11" VerticalAlignment="Top"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Action}" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                                                        <TextBlock Text="{Binding Details}" TextWrapping="Wrap" FontSize="11" Foreground="#555"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>