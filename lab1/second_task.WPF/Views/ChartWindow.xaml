<Window x:Class="second_task.WPF.Views.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Data Visualization" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Controls Panel -->
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Chart Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding ChartTypes}" 
                              SelectedItem="{Binding SelectedChartType}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" Text="X Axis:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding AxisOptions}" 
                              SelectedItem="{Binding SelectedXAxis}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="4" Text="Y Axis:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="5" ItemsSource="{Binding AxisOptions}" 
                              SelectedItem="{Binding SelectedYAxis}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="6" Text="Group By:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="7" ItemsSource="{Binding GroupByOptions}" 
                              SelectedItem="{Binding SelectedGroupBy}" Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="9" Content="Save Chart" Command="{Binding SaveChartCommand}" 
                            Padding="15,5" Background="DodgerBlue" Foreground="White" Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="10" Content="Save for Report" Command="{Binding SaveForReportCommand}" 
                            Padding="15,5" Background="Green" Foreground="White"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Chart Area -->
        <oxy:PlotView Grid.Row="1" Model="{Binding PlotModel}" Margin="10"/>
    </Grid>
</Window>
