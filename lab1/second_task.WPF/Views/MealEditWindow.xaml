<Window x:Class="second_task.WPF.Views.MealEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Meal" Height="650" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Meal Name -->
        <TextBlock Grid.Row="0" Text="Meal Name:" Margin="0,5"/>
        <TextBox Grid.Row="1" Name="MealNameTextBox" Margin="0,5" Padding="5"/>
        
        <!-- Cuisine -->
        <TextBlock Grid.Row="2" Text="Cuisine:" Margin="0,5"/>
        <ComboBox Grid.Row="3" Name="CuisineComboBox" Margin="0,5" Padding="5" IsEditable="True"/>
        
        <!-- Diet -->
        <TextBlock Grid.Row="4" Text="Diet Type:" Margin="0,5"/>
        <ComboBox Grid.Row="5" Name="DietComboBox" Margin="0,5" Padding="5" IsEditable="True"/>
        
        <!-- Meal Type -->
        <TextBlock Grid.Row="6" Text="Meal Type:" Margin="0,5"/>
        <ComboBox Grid.Row="7" Name="MealTypeComboBox" Margin="0,5" Padding="5" IsEditable="True"/>
        
        <!-- Nutrition Info -->
        <Grid Grid.Row="8" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Calories:" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="0" Name="CaloriesTextBox" Margin="0,5,5,5" Padding="5"/>
            
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Rating:" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="RatingTextBox" Margin="5,5,0,5" Padding="5"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Protein (g):" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="0" Name="ProteinTextBox" Margin="0,5,5,5" Padding="5"/>
            
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Carbs (g):" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Name="CarbsTextBox" Margin="5,5,0,5" Padding="5"/>
            
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Fat (g):" Margin="0,5"/>
            <TextBox Grid.Row="5" Grid.Column="0" Name="FatTextBox" Margin="0,5,5,5" Padding="5"/>
            
            <CheckBox Grid.Row="6" Grid.ColumnSpan="2" Name="IsHealthyCheckBox" Content="Is Healthy" Margin="0,10" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Validation Errors -->
        <TextBlock Grid.Row="11" Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" Margin="0,10"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Name="SaveButton" Click="Save_Click" Padding="15,5" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Name="CancelButton" Click="Cancel_Click" Padding="15,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
