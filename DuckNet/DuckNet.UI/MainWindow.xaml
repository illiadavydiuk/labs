<Window x:Class="DuckNet.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DuckNet.UI.Converters"
        Title="DuckNet Ultra" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI"
        Background="{StaticResource BgColor}" Foreground="{StaticResource TextDark}">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

        <Style x:Key="CenteredCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border x:Name="border" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#E0F2FE"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColMenu" Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SecondaryColor}" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,30,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="☰" Click="BtnCollapseMenu_Click" Foreground="{StaticResource TextLight}" Background="Transparent" BorderThickness="0" FontSize="24" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel x:Name="LogoPanel" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                        <TextBlock Text="🦆" FontSize="24" Foreground="{StaticResource AccentYellow}"/>
                        <TextBlock Text="DuckNet" FontSize="22" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1">
                    <Button Tag="📊" Content="Дашборд" Click="Nav_Dashboard_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="📡" Content="Сканер" Click="Nav_Scanner_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="📜" Content="Журнал подій" Click="Nav_Events_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="🔌" Content="Адаптери" Click="Nav_Adapters_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="🛠" Content="Діагностика" Click="Nav_Diagnostics_Click" Style="{StaticResource MenuBtn}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Border Height="1" Background="#1E293B" Margin="20,10"/>
                    <Button Tag="⚙️" Content="Налаштування" Click="Nav_Settings_Click" Style="{StaticResource MenuBtn}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">

            <Grid x:Name="ViewDashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto" BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="Огляд мережі" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                        <WrapPanel Margin="0,0,0,20">
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Всього пристроїв" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashTotal" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Зараз онлайн" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashOnline" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Зараз офлайн" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashOffline" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource DangerColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <Border Background="{StaticResource CardColor}" CornerRadius="16" Padding="20" Height="220" Margin="0,0,0,25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="📉" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="Історія активності" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                                <Border Grid.Row="1" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" ClipToBounds="True">
                                    <Canvas x:Name="GraphCanvas" Background="Transparent" SizeChanged="GraphCanvas_SizeChanged">
                                        <Polyline x:Name="ActivityGraphLine" Stroke="{StaticResource PrimaryColor}" StrokeThickness="3" Points=""/>
                                        <Polygon x:Name="ActivityGraphFill" Fill="{StaticResource PrimaryColor}" Opacity="0.1" Points=""/>
                                    </Canvas>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="ViewScanner" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TxtIpBase" Text="192.168.0." Width="200" Style="{StaticResource ModernTextBox}" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" x:Name="BtnScan" Content="🔍 Сканувати" Click="BtnScan_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                    <CheckBox Grid.Column="2" x:Name="ChkAutoScan" Content="Автосканування" VerticalAlignment="Center" Margin="25,0,0,0" Checked="ChkAutoScan_Checked" Unchecked="ChkAutoScan_Unchecked"/>
                </Grid>

                <DataGrid Grid.Row="1" x:Name="GridScanner" AutoGenerateColumns="False" 
                          CanUserAddRows="False" RowHeight="60"
                          IsReadOnly="False" 
                          CellEditEnding="GridScanner_CellEditEnding">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12" Height="12" Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="IP" Binding="{Binding IpAddress}" Width="130" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}" FontWeight="Bold"/>
                        <DataGridTextColumn Header="MAC" Binding="{Binding MacAddress}" Width="140" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}" Foreground="Gray"/>
                        <DataGridTextColumn Header="Hostname / Vendor" Binding="{Binding Hostname}" Width="180" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>

                        <DataGridTextColumn Header="Моя Назва (Ред.)" Binding="{Binding CustomName, UpdateSourceTrigger=PropertyChanged}" Width="180">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridCheckBoxColumn Header="Довірений" Binding="{Binding IsTrusted, UpdateSourceTrigger=PropertyChanged}" Width="100" IsReadOnly="False">
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                        </DataGridCheckBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewEvents" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <TextBlock Text="Журнал подій" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <TextBlock Text="Експорт за:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="DateExport" Width="120" VerticalContentAlignment="Center"/>
                    <Button Content="💾 Експорт в TXT" Click="BtnExportEvents_Click" Style="{StaticResource ModernBtn}" Margin="10,0,0,0" Background="{StaticResource SecondaryColor}"/>
                </StackPanel>

                <DataGrid Grid.Row="1" x:Name="GridAllEvents" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Час" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="180" ElementStyle="{StaticResource CenteredCell}"/>
                        <DataGridTextColumn Header="Подія" Binding="{Binding Message}" Width="*" ElementStyle="{StaticResource CenteredCell}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewAdapters" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Керування адаптерами" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                <DataGrid Grid.Row="1" x:Name="GridAdapters" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="70">
                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Інтерфейс" Binding="{Binding NetConnectionId}" Width="Auto" FontWeight="Bold" FontSize="15">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Обладнання" Binding="{Binding Name}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Стан" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}" Style="{StaticResource ToggleSwitchStyle}" Click="ToggleAdapter_Click"/>
                                        <TextBlock Text="{Binding Status}" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource TextLight}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewDiagnostics" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Діагностика" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                    <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="TxtPingTarget" Text="8.8.8.8" Width="250" Style="{StaticResource ModernTextBox}"/>
                                <Button Content="Ping" Click="BtnPing_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                                <Button Content="🛣 Traceroute" Click="BtnTraceroute_Click" Style="{StaticResource ModernBtn}" Margin="10,0,0,0" Background="{StaticResource SecondaryColor}"/>
                            </StackPanel>
                            <TextBox x:Name="TxtPingResult" Height="300" Margin="0,20,0,0" Style="{StaticResource ModernTextBox}" Background="#F1F5F9" FontFamily="Consolas" VerticalContentAlignment="Top" Padding="15" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid x:Name="ViewSettings" Visibility="Collapsed">
                <ScrollViewer BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="Налаштування" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>

                        <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Text="Керування даними" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                                <Button Content="🗑 Очистити всю базу даних" Click="BtnClearHistory_Click" Style="{StaticResource ModernBtn}" Background="{StaticResource DangerColor}" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Text="Автосканування" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Інтервал (секунд):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox x:Name="TxtScanInterval" Width="80" Text="30" Style="{StaticResource ModernTextBox}"/>
                                    <Button Content="💾 Зберегти" Click="SaveScanInterval_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16">
                            <StackPanel>
                                <TextBlock Text="Профілі Адаптерів" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                                <TextBlock Text="Створіть профіль та виберіть, які адаптери мають бути УВІМКНЕНІ." Foreground="Gray" Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <ListBox x:Name="ListProfiles" Grid.Column="0" Height="300" Margin="0,0,20,0" 
                                             DisplayMemberPath="ProfileName" SelectionChanged="ListProfiles_SelectionChanged"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Редагування профілю" FontWeight="Bold" Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <TextBox x:Name="TxtProfName" Width="200" Style="{StaticResource ModernTextBox}" Tag="Назва профілю (напр. Дім)"/>
                                            <Button Content="➕ Створити" Click="BtnAddProfile_Click" Style="{StaticResource ModernBtn}" Margin="10,0,0,0"/>
                                        </StackPanel>

                                        <Border Height="1" Background="#E2E8F0" Margin="0,10"/>

                                        <TextBlock Text="Відмітьте адаптери, які будуть працювати в цьому профілі:" Margin="0,10,0,10"/>

                                        <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                            <StackPanel x:Name="PanelProfileAdapters"/>
                                        </ScrollViewer>

                                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                            <Button x:Name="BtnSaveProfile" Content="💾 Зберегти зміни" Click="BtnSaveProfile_Click" Style="{StaticResource ModernBtn}" IsEnabled="False"/>
                                            <Button x:Name="BtnDeleteProfile" Content="❌ Видалити" Click="BtnDeleteProfile_Click" Style="{StaticResource ModernBtn}" Background="{StaticResource DangerColor}" Margin="10,0,0,0" IsEnabled="False"/>
                                        </StackPanel>

                                        <Border Height="1" Background="#E2E8F0" Margin="0,20"/>

                                        <Button x:Name="BtnApplyProfile" Content="✅ ЗАСТОСУВАТИ ПРОФІЛЬ (Увімкнути вибране)" Click="BtnApplyProfile_Click" Style="{StaticResource ModernBtn}" Background="{StaticResource SecondaryColor}" HorizontalAlignment="Left" IsEnabled="False"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>