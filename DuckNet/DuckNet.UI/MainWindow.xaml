<Window x:Class="DuckNet.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DuckNet.UI.Converters"
        Title="DuckNet Enterprise" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI"
        Background="{StaticResource BgColor}">

    <Window.Resources>
        <converters:StatusIconConverter x:Key="StatusIconConverter"/>
        <converters:StatusToButtonTextConverter x:Key="StatusToButtonTextConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SecondaryColor}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="25,30,0,40">
                    <TextBlock Text="🦆" FontSize="24"/>
                    <TextBlock Text="DuckNet" FontSize="22" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock Text="МОНІТОРИНГ" FontSize="11" Foreground="#64748B" Margin="25,0,0,10" FontWeight="Bold"/>
                <Button Content="📊 Дашборд" Click="Nav_Dashboard_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="📡 Сканер" Click="Nav_Scanner_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="📜 Журнал подій" Click="Nav_Events_Click" Style="{StaticResource MenuButtonStyle}"/>

                <TextBlock Text="КЕРУВАННЯ" FontSize="11" Foreground="#64748B" Margin="25,20,0,10" FontWeight="Bold"/>
                <Button Content="🔌 Адаптери" Click="Nav_Adapters_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="⚙️ Налаштування" Style="{StaticResource MenuButtonStyle}" IsEnabled="False" Opacity="0.5"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="30">

            <Grid x:Name="ViewDashboard" Visibility="Visible">
                <StackPanel>
                    <TextBlock Text="Огляд мережі" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                    <WrapPanel>
                        <Border Width="240" Style="{StaticResource CardStyle}" Margin="0,0,20,20">
                            <StackPanel>
                                <TextBlock Text="Всього пристроїв" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                                <TextBlock x:Name="DashTotalDevices" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Width="240" Style="{StaticResource CardStyle}" Margin="0,0,20,20">
                            <StackPanel>
                                <TextBlock Text="Зараз онлайн" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                                <TextBlock x:Name="DashOnlineDevices" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Width="240" Style="{StaticResource CardStyle}" Margin="0,0,20,20">
                            <StackPanel>
                                <TextBlock Text="Подій за добу" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                                <TextBlock x:Name="DashEventsCount" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource DangerColor}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Останні активності" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                            <DataGrid x:Name="GridDashEvents" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" BorderThickness="0" Background="White" RowHeight="35">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Час" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="100"/>
                                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120" FontWeight="SemiBold"/>
                                    <DataGridTextColumn Header="Повідомлення" Binding="{Binding Message}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid x:Name="ViewScanner" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Сканування мережі" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Базовий IP" FontSize="12" Foreground="Gray"/>
                            <TextBox x:Name="TxtIpBase" Text="192.168.1." Width="150" Padding="8" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button x:Name="BtnScan" Content="🚀 Запустити сканування" Click="BtnScan_Click" Style="{StaticResource PrimaryBtn}" Margin="20,18,0,0"/>

                        <TextBlock x:Name="TxtScanStatus" Text="Очікування..." VerticalAlignment="Bottom" Margin="20,0,0,12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="1" x:Name="GridScanner" AutoGenerateColumns="False" IsReadOnly="True" BorderThickness="0" RowHeight="45">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header=" " Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsOnline, Converter={StaticResource StatusIconConverter}}" FontSize="18" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="150" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="160" Foreground="#555"/>
                        <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewEvents" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Повний журнал подій" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                <DataGrid Grid.Row="1" x:Name="GridAllEvents" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата/Час" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="160"/>
                        <DataGridTextColumn Header="Подія" Binding="{Binding Type}" Width="150" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Опис" Binding="{Binding Message}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewAdapters" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Керування адаптерами" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <Button Content="🔄 Оновити" Click="BtnLoadAdapters_Click" Margin="20,0,0,0" Padding="15,5"/>
                </StackPanel>

                <DataGrid Grid.Row="1" x:Name="GridAdapters" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Інтерфейс" Binding="{Binding NetConnectionId}" Width="200" FontWeight="Bold" FontSize="14"/>
                        <DataGridTextColumn Header="Обладнання" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                        <DataGridTemplateColumn Header="Керування" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding IsEnabled, Converter={StaticResource StatusToButtonTextConverter}}" 
                                            Click="BtnToggleAdapter_Click" 
                                            Padding="10,5" Margin="5" FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>
    </Grid>
</Window>