<Window x:Class="DuckNet.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DuckNet.UI.Converters"
        Title="DuckNet Ultra" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen" FontFamily="Segoe UI"
        Background="{StaticResource BgColor}" Foreground="{StaticResource TextDark}">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColMenu" Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SecondaryColor}" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,30,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="☰" Click="BtnCollapseMenu_Click" Foreground="{StaticResource TextLight}" Background="Transparent" BorderThickness="0" FontSize="24" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel x:Name="LogoPanel" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                        <TextBlock Text="🦆" FontSize="24" Foreground="{StaticResource AccentYellow}"/>
                        <TextBlock Text="DuckNet" FontSize="22" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1">
                    <Button Tag="📊" Content="Дашборд" Click="Nav_Dashboard_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="📡" Content="Сканер" Click="Nav_Scanner_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="📜" Content="Журнал подій" Click="Nav_Events_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="🔌" Content="Адаптери" Click="Nav_Adapters_Click" Style="{StaticResource MenuBtn}"/>
                    <Button Tag="🩺" Content="Діагностика" Click="Nav_Diagnostics_Click" Style="{StaticResource MenuBtn}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Border Height="1" Background="#1E293B" Margin="20,10"/>
                    <Button Tag="⚙️" Content="Налаштування" Click="Nav_Settings_Click" Style="{StaticResource MenuBtn}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">

            <Grid x:Name="ViewDashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto" BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="Огляд мережі" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                        <WrapPanel Margin="0,0,0,20">
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Всього пристроїв" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashTotal" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Зараз онлайн" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashOnline" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Width="220" Background="{StaticResource CardColor}" CornerRadius="16" Margin="0,0,20,20" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Зараз офлайн" Foreground="{StaticResource TextLight}"/>
                                    <TextBlock x:Name="DashOffline" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource DangerColor}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <Border Background="{StaticResource CardColor}" CornerRadius="16" Padding="20" Height="220" Margin="0,0,0,25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="📉" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="Історія активності" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                                <Border Grid.Row="1" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" ClipToBounds="True">
                                    <Canvas x:Name="GraphCanvas" Background="Transparent" SizeChanged="GraphCanvas_SizeChanged">
                                        <Polyline x:Name="ActivityGraphLine" Stroke="{StaticResource PrimaryColor}" StrokeThickness="3" Points=""/>
                                        <Polygon x:Name="ActivityGraphFill" Fill="{StaticResource PrimaryColor}" Opacity="0.1" Points=""/>
                                    </Canvas>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="ViewScanner" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Сканер пристроїв" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TxtIpBase" Text="192.168.0." Width="200" Style="{StaticResource ModernTextBox}" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" x:Name="BtnScan" Content="🔍 Сканувати" Click="BtnScan_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                    <CheckBox Grid.Column="2" x:Name="ChkAutoScan" Content="Автосканування" VerticalAlignment="Center" Margin="25,0,0,0" Checked="ChkAutoScan_Checked" Unchecked="ChkAutoScan_Unchecked"/>
                </Grid>
                <DataGrid Grid.Row="1" x:Name="GridScanner" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="60">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="70" Header="Статус">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12" Height="12" Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="IP Адреса" Binding="{Binding IpAddress}" Width="150" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="MAC Адреса" Binding="{Binding MacAddress}" Width="160" Foreground="{StaticResource TextLight}" FontFamily="Consolas"/>
                        <DataGridTextColumn Header="Ім'я пристрою" Binding="{Binding Hostname}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewEvents" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Журнал подій" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                <DataGrid Grid.Row="1" x:Name="GridAllEvents" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Час" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="180"/>
                        <DataGridTextColumn Header="Подія" Binding="{Binding Message}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewAdapters" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Керування адаптерами" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                <DataGrid Grid.Row="1" x:Name="GridAdapters" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="70">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Інтерфейс" Binding="{Binding NetConnectionId}" Width="250" FontWeight="Bold" FontSize="15">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Обладнання" Binding="{Binding Name}" Width="*"/>
                        <DataGridTemplateColumn Header="Стан" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}" Style="{StaticResource ToggleSwitchStyle}" Click="ToggleAdapter_Click"/>
                                        <TextBlock Text="{Binding Status}" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource TextLight}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="ViewDiagnostics" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Діагностика" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>
                    <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="TxtPingTarget" Text="8.8.8.8" Width="250" Style="{StaticResource ModernTextBox}"/>
                                <Button Content="Ping" Click="BtnPing_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                                <Button Content="🛣 Traceroute" Click="BtnTraceroute_Click" Style="{StaticResource ModernBtn}" Margin="10,0,0,0" Background="{StaticResource SecondaryColor}"/>
                            </StackPanel>
                            <TextBox x:Name="TxtPingResult" Height="300" Margin="0,20,0,0" Style="{StaticResource ModernTextBox}" Background="#F1F5F9" FontFamily="Consolas" VerticalContentAlignment="Top" Padding="15" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid x:Name="ViewSettings" Visibility="Collapsed">
                <ScrollViewer BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="Налаштування" FontSize="28" FontWeight="Bold" Margin="0,0,0,25"/>

                        <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Text="Загальні" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <TextBlock Text="Інтервал автосканування (хв):" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <TextBox x:Name="TxtScanInterval" Text="5" Width="80" Style="{StaticResource ModernTextBox}"/>
                                    <Button Content="Зберегти" Click="BtnSaveSettings_Click" Style="{StaticResource ModernBtn}" Margin="15,0,0,0"/>
                                </StackPanel>
                                <Button Content="🗑 Очистити історію пристроїв" Click="BtnClearHistory_Click" Style="{StaticResource ModernBtn}" Background="{StaticResource DangerColor}" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardColor}" Padding="30" CornerRadius="16">
                            <StackPanel>
                                <TextBlock Text="Керування Профілями Адаптерів" FontWeight="Bold" FontSize="18" Margin="0,0,0,5"/>
                                <TextBlock Text="Виберіть профіль і застосуйте. Адаптери, які не в списку, будуть вимкнені." Foreground="{StaticResource TextLight}" Margin="0,0,0,20"/>

                                <Grid Height="300">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Margin="0,0,20,0">
                                        <ListBox x:Name="ListProfiles" SelectionChanged="ListProfiles_SelectionChanged" BorderThickness="0" Background="Transparent" FontSize="14">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Padding" Value="10"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ScrollViewer Grid.Row="0">
                                            <StackPanel x:Name="PanelProfileAdapters">
                                                <TextBlock Text="Оберіть профіль зліва..." Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </ScrollViewer>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                            <Button x:Name="BtnSaveProfile" Content="💾 Зберегти зміни" Click="BtnSaveProfile_Click" Style="{StaticResource ModernBtn}" Background="{StaticResource SecondaryColor}" Margin="0,0,10,0" IsEnabled="False"/>
                                            <Button x:Name="BtnApplyProfile" Content="✅ Застосувати Профіль" Click="BtnApplyProfile_Click" Style="{StaticResource ModernBtn}" IsEnabled="False"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>
    </Grid>
</Window>